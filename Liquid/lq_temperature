# Will display the numeric value as we got it through the lq_temp_function
# and colorize it through lq_heatmap.
[[ "$LQ_ENABLE_TEMP" != 1 ]] && return

temperature=$($lq_temp_function)
if [[ $temperature -ge $LQ_TEMP_THRESHOLD ]]; then
	echo -ne "${LQ_MARK_TEMP}$(lq_heatmap $((temperature/20)))$temperatureÂ°${LQ_RESET}"
fi
